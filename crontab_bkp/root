#backup pfsense
16 10 * * * cd /etc/ansible/pfsense_playbook && ansible-playbook -i hosts bkp.yml && echo $(date) >> /etc/ansible/pfsense_playbook/roles/backup/files/logs.txt
#----------------------------------------------------------------
#reboot pfsense
55 21 * * * cd /etc/ansible/pfsense_playbook && ansible-playbook -i hosts reboot.yml && echo "O pfsense foi reiniciado em $(date)" >> /etc/ansible/pfsense_playbook/roles/reboot_system/files/logs.txt
#----------------------------------------------------------------
#restart e2guardian service 
05 22 * * * cd /etc/ansible/pfsense_playbook && ansible-playbook -i hosts e2g.yml && echo "serviço e2guardian reiniciado $(date)" >> /etc/ansible/pfsense_playbook/roles/e2g/files/logs.txt 
#----------------------------------------------------------------
#backup diário crontab
34 10 * * * cd /var/spool/cron/crontabs/ && cp root /etc/ansible/crontab_bkp
